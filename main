[org 0x100]

jmp start

x_snake: dw 0
y_snake: dw 0
xy_snake: dw 0
len: dw 1
ltmv: dw 1
is_pause: dw 0
score: dw " Last Move: X"
status: dw "ESC-->End"

start:
	call bg
	call game
	jmp end
	
game:
	push ax
	push bx
	push cx
	push dx
	push si
	push di
	push es

	mov word[x_snake], 20
	mov word[y_snake], 2
	call snake

	main:
		cmp word[y_snake], 0
		je end
		cmp word[y_snake], 22 
		jae end
		cmp word[x_snake], 0
		je end
		cmp word[x_snake], 79
		jae end
		call check_key
		
		call delay
		;call bg
        call snake
			
	jmp main

	pop es
	pop di
	pop si
	pop dx
	pop cx
	pop bx
	pop ax
	ret


check_key:
	mov ah, 0x1
	int 16h
	jz cont
	mov ah, 0x0
	int 16h
	
	cmp ah, 4Bh
	je left
	cmp ah, 4Dh
	je right
	cmp ah, 48h
	je up
	cmp ah, 50h
	je down
	cmp ah, 01h
	je end
	jmp cont

left:
	cmp word[ltmv], 1
	je cont
	add word[x_snake], -2
	mov word[ltmv], 0
	mov word[score+12], 'L'
	ret

right:
	cmp word[ltmv], 0
	je cont
	add word[x_snake], 2
	mov word[ltmv], 1
	mov word[score+12], 'R'
	ret

up:
	cmp word[ltmv], 3
	je cont
	add word[y_snake], -1
	mov word[ltmv], 2
	mov word[score+12], 'U'
	ret

down:
	cmp word[ltmv], 2
	je cont
	add word[y_snake], 1
	mov word[ltmv], 3
	mov word[score+12], 'D'
	ret

cont:
	cmp word[ltmv], 0
	je left
	cmp word[ltmv], 1
	je right
	cmp word[ltmv], 2
	je up
	cmp word[ltmv], 3
	je down
	ret

snake:	
	push ax
	push dx
	push cx
	push di
	push es
	std
	
	call bg
	mov dx, 0xB800
	mov es, dx
	mov dh, 0x02
	mov dl, 0xDC
	
	call get_cords
	
	mov di, word[xy_snake]
	mov cx, [len]
	xchg ax, dx
	rep stosw
	xchg ax, dx
	
	
	pop es
	pop di
	pop cx
	pop dx
	pop ax
	ret
	
get_cords:
	push ax
	push bx

	mov al, byte[y_snake]
	mov bl, 80
	mul bl
	add ax, word[x_snake]
	shl ax, 1
	mov word[xy_snake], ax
	
	pop bx
	pop ax
	ret
	
delay:
	push cx
	push dx
	push di
	
	mov cx, 5
	mov di, 0

	l1: 
		mov dx, 0xFFFF
		l2: 
			dec dx
			jnz l2
	loop l1
	
	pop di
	pop dx
	pop cx
	ret


bg:
	push ax
	push cx
	push di
	push es
	
	
	mov ax, 0xB800
	mov es, ax
	mov ah, 0x07
	mov al, 0x20
	mov di, 0
	mov cx, 2000
	cld
	rep stosw
	mov ah, 0x07
	mov al, 0xB1
	
	mov cx, 24
	mov di, 0
		l3:
			stosw
			add di, 156
			stosw
		loop l3
	
	mov di, 0
	mov cx, 80
	cld
	rep stosw
	mov di, 3520
	mov cx, 80
	cld 
	rep stosw
	
	mov ah, 0x13
	mov al, 1 
	mov bh, 0 
	mov bl, 7
	mov dx, 0x1701 
	mov cx, 13
	push cs 
	pop es 
	mov bp, score
	int 0x10 
	
	mov dx, 0x1715
	mov cx, 9
	push cs 
	pop es 
	mov bp, status
	int 0x10 


	
	
	pop es
	pop di
	pop dx
	pop cx
	ret

end:
mov ax, 0x4C00
int 0x21
